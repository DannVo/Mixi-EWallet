<%- include('./layouts/head.ejs') %>

<body class="gradient-custom-2" style="background-image: url('/images/bg.jpg'); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover;">
  <section class="h-100 loginform">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-6">
          <div class="card rounded-3 text-black">
            <div class="row g-0">
              <div class="col-lg">
                <div class=" p-md-5 mx-md-4">
                  <div class="text-center">

                    <h4 class="mt-1 mb-5 pb-1">ĐĂNG NHẬP</h4>

                  </div>

                  <form action="/" method="post">

                    <div class="form-group mb-4">
                      <label class=" form-label " for="username">Tài khoản</label>
                      <input value="<%= username %>" name="username" type="text" id="username" class="form-control" placeholder="" required="" />

                    </div>

                    <div class="form-group mb-4 ">
                      <label class="form-label " for="password">Mật khẩu</label>
                      <input value="<%= password %>" name="password" type="password" id="password" placeholder="" class="form-control " required="" />

                    </div>
                    <% if(error){ %>
                    <!-- <div class="alert alert-success mb-3"> -->
                    <div class="text-danger text-left"><i>
                        <%= error %></i>
                    </div>
                    <%}%> <br>

                    <div class="text-center pt-1 mb-5 pb-1 ">
                      <button class="btn btn-primary btn-block " type="button " style="background:#000; color:#fff">Đăng
                        nhập</button>
                    </div>

                   

                    
                    <div style="text-align: end;">
                      <a class="text-muted " href="/resetPassword">Quên mật khẩu?</a><br>
                      Chưa có tài khoản?
                      <a href="/register" type="button ">Đăng ký ngay</a>

                    </div>

                    

                                        </form>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
        <script src="/js/main.js"></script>
    </body>

    </html>
    <script>
        setTimeAutoClosing(".alert-danger", 3000);
    </script>