<%- include('./layouts/head.ejs') %>

<body>
  <div class="wrapper">
    <%- include('./layouts/user_navbar.ejs') %>
    <div class="main-panel" style="background-image: url('/images/bg5.jpg'); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover;">
      <div class="container mt-5">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0 p-4">
            <h1 class="text-black text-center">Nạp tiền</h1><br><br><br>
            <form action="/user/addMoney" method="post">
              <!-- số the và ngày hết hạn -->
              <div class="row mb-4">
                <div class="col">
                  <div class="form-group">
                    <label class="form-label" for="numberCard">Số thẻ</label>
                    <input type="text" name="numberCard" id="numberCard" class="form-control" />

                  </div>
                </div>
                <div class="col">
                  <div class="form-group">
                    <label class="form-label" for="dateExp">Ngày hết hạn</label>
                    <input type="date" name="dateExp" id="dateExp" class="form-control" />

                  </div>
                </div>
              </div>

              <!-- Mã Cvv và số tiền cần nạp -->
              <div class="row mb-4">
                <div class="col">
                  <div class="form-group">
                    <label class="form-label" for="cvv">Mã CVV</label>
                    <input type="text" name="cvv" id="cvv" class="form-control" />

                  </div>
                </div>
                <div class="col">
                  <div class="form-group">
                    <label class="form-label" for="money">Số tiền nạp</label>
                    <input type="hidden" min="0.0" name="money" id="money" class="form-control" />
                    <input onblur="convertNum2Money()" onclick="convertText2Num()" type="number" min="0.0" name="money_temp" id="money_temp" class="form-control" />
                  </div>
                </div>
              </div>
              <% if(error){ %>
              <div class="alert alert-danger mb-3 text-center">
                <%= error %>
              </div>
              <%}%>
                                            <!-- Submit button -->
                                            <button type="submit" class="btn btn-primary btn-block " style="background:#000; color:#fff">Nạp</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <script src="/js/main.js"></script>
        <script>
            setTimeAutoClosing(".alert-danger", 3000);
        </script>

    </body>

    </html>