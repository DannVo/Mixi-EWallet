<%- include('./layouts/head.ejs') %>

<body class="gradient-custom" style="background-image: url('/images/bg2.jpg'); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover;">
  <section class="vh-100 ">
    <div class="container py-5 h-100">
      <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-lg-9 col-xl-7">
          <div class="card shadow-2-strong card-registration" style="padding:50px;box-shadow: 2px 2px 2px 2px black; border-radius: 2px;">
            <div class="card-body p-5 p-md-5">
              <h3 class="text-center">ĐĂNG KÝ</h3><br>
              <form method="post" action="/register" enctype="multipart/form-data">
                <div class="row">
                  <div class="col-md-6 mb-4">

                    <div class="form">
                      <label class="form-label" for="fullname">Họ tên:</label>
                      <input value="<%= fullname %>" type="text" id="fullname" name="fullname" class="form-control form-control-lg" placeholder="" required="" />
                    </div>

                  </div>
                  <div class="col-md-6 mb-4">

                    <div class="form">
                      <label class="form-label" for="lastName">Số điện thoại</label>
                      <input value="<%= phone %>" type="tel" id="phone" name="phone" class="form-control form-control-lg" placeholder="" pattern="[0-9]{4}[0-9]{3}[0-9]{3}" />
                    </div>

                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-4 d-flex align-items-center">

                    <div class="form datepicker w-100">
                      <label for="birthday" class="form-label">Ngày sinh</label>

                      <input value="<%= birthday %>" type="date" name="birthday" class="form-control form-control-lg" id="birthday" />
                    </div>

                  </div>
                  <div class="col-md-6 mb-4 d-flex align-items-center">

                    <div class="form w-100">
                      <label for="address" class="form-label">Địa chỉ</label>
                      <input value="<%= address %>" type="text" name="address" class="form-control form-control-lg" id="address" placeholder="" />
                    </div>

                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12 mb-4 pb-2">

                    <div class="form">
                      <label class="form-label" for="email">Địa chỉ E-mail</label>
                      <input value="<%= email %>" type="email" name="email" id="email" class="form-control form-control-lg" placeholder="" />
                    </div>

                  </div>

                </div>


                <div class="form w-100">
                  <label class="form-label">Chứng minh nhân dân mặt trước</label>
                  <input value="<%= idcard_front %>" type="file" name="idcard_front" class="form-control form-control-lg" required />
                </div>
                <br>



                <div class="form w-100">
                  <label class="form-label">Chứng minh nhân dân mặt sau</label>
                  <input value="<%= idcard_back %>" type="file" name="idcard_back" class="form-control form-control-lg" required />
                </div><br>



                <% if(error){ %>
                <div class="alert alert-danger mb-3">
                  <strong>Lưu ý!</strong>
                  <%= error %>
                </div>
                <%}%>
                                            <input class="btn btn-primary btn-lg " type="submit" value="Đăng ký"
                                                style="background:#000;color:#fff;" />

                                </form><br>
                                <div>
                                    Đã có tài khoản? <a href="/">Đăng nhập ngay</a>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </body>

    </html>
    <script>
        setTimeAutoClosing(".alert-danger", 3000);
    </script>